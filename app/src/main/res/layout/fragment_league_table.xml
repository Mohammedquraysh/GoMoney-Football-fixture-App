<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_light"
    tools:context="com.presentation.ui.league.LeagueTableFragment">

    <!-- Table Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tableHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/table_header_bg"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Position Header -->
        <TextView
            android:id="@+id/headerPosition"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Team Header -->
        <TextView
            android:id="@+id/headerTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Team"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/headerMatches"
            app:layout_constraintStart_toEndOf="@id/headerPosition"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Matches Header -->
        <TextView
            android:id="@+id/headerMatches"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MP"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/headerGoalDiff"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Goal Difference Header -->
        <TextView
            android:id="@+id/headerGoalDiff"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GD"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/headerPoints"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Points Header -->
        <TextView
            android:id="@+id/headerPoints"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PTS"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Table RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableHeader"
        tools:itemCount="20"
        tools:listitem="@layout/item_table_row" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Error State -->
    <TextView
        android:id="@+id/textError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Failed to load table"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>