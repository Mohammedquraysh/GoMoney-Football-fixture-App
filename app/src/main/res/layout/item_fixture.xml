<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_view_home_crest"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/home_team_crest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_soccer_ball" />

    <TextView
        android:id="@+id/text_view_home_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_view_home_crest"
        app:layout_constraintBottom_toBottomOf="@id/image_view_home_crest"
        app:layout_constraintStart_toEndOf="@id/image_view_home_crest"
        app:layout_constraintEnd_toStartOf="@id/text_view_score"
        tools:text="Manchester United" />

    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/image_view_home_crest"
        app:layout_constraintBottom_toBottomOf="@id/image_view_away_crest"
        app:layout_constraintEnd_toStartOf="@id/image_view_away_crest"
        app:layout_constraintTop_toTopOf="@id/image_view_home_crest"
        tools:text="2 - 1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_away_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:gravity="end"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_view_away_crest"
        app:layout_constraintBottom_toBottomOf="@id/image_view_away_crest"
        app:layout_constraintEnd_toStartOf="@id/image_view_away_crest"
        tools:text="Liverpool" />

    <ImageView
        android:id="@+id/image_view_away_crest"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/away_team_crest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_soccer_ball" />

    <TextView
        android:id="@+id/text_view_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@color/material_on_surface_emphasis_medium"
        app:layout_constraintTop_toBottomOf="@id/image_view_home_crest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_view_status"
        tools:text="Dec 15, 2024 15:00" />

    <TextView
        android:id="@+id/text_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:background="@drawable/background_status"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/image_view_away_crest"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="SCHEDULED" />

    <TextView
        android:id="@+id/text_view_competition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/material_on_surface_emphasis_medium"
        app:layout_constraintTop_toBottomOf="@id/text_view_date_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Premier League" />

</androidx.constraintlayout.widget.ConstraintLayout>