<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_row_selector"
    android:padding="12dp">

    <!-- Position -->
    <TextView
        android:id="@+id/textPosition"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Position Indicator -->
    <View
        android:id="@+id/positionIndicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:background="@color/champions_league_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/textPosition"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Team Logo -->
    <ImageView
        android:id="@+id/imageTeamLogo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_team_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/positionIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Team Name -->
    <TextView
        android:id="@+id/textTeamName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Manchester City"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textMatches"
        app:layout_constraintStart_toEndOf="@id/imageTeamLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Matches Played -->
    <TextView
        android:id="@+id/textMatches"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="35"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textGoalDiff"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Goal Difference -->
    <TextView
        android:id="@+id/textGoalDiff"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="+76"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Points -->
    <TextView
        android:id="@+id/textPoints"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="93"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPosition" />

</androidx.constraintlayout.widget.ConstraintLayout>